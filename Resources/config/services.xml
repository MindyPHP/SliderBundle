<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="mindy.bundle.slider.template_library.slider"
                 class="Mindy\Bundle\SliderBundle\Library\SliderLibrary">
            <tag name="template.library" />
        </service>

        <service id="mindy.bundle.slider.admin.slider"
                 class="Mindy\Bundle\SliderBundle\Admin\SliderAdmin">
            <tag name="admin.admin" slug="slider_slider" />
        </service>
    </services>
</container>